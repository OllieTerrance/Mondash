{%- macro currency(amount, decimal=true) -%}
{%- if amount == amount | int and not decimal -%}
{{- "%g" | format(amount) -}}
{%- else -%}
{{- "%0.2f" | format(amount) -}}
{%- endif -%}
{%- endmacro -%}

{%- macro sort_code(code) -%}
{{- code[0:2] }}-{{ code[2:4] }}-{{ code[4:6] -}}
{%- endmacro -%}

{% macro account_label(account) -%}
{%- set tag = "strike" if account.closed else "b" -%}
<{{ tag }}>{{ account.description }}</{{ tag }}>
{%- if account.id in balances -%}
{{ " " }}(&pound;{{ currency(balances[account.id].balance) }})
{%- endif -%}
{%- endmacro -%}

{%- macro account_item(account) -%}
<strong>{{ account.description }}</strong> <code>{{ account.type }}</code>
{%- if account.id in balances -%}
<br><i class="fa-fw fas fa-pound-sign"></i> {{ currency(balances[account.id].balance) }}
{%- endif -%}
{%- if account.account_number -%}
<br><i class="fa-fw fas fa-globe"></i> {{ account.account_number }}, {{ sort_code(account.sort_code) }}
{%- endif -%}
{%- endmacro -%}

{%- macro pot_item(pot) -%}
<strong>{{ pot.name }}</strong>
<br><i class="fa-fw fas fa-pound-sign"></i> {{ currency(pot.balance) }}
{%- endmacro -%}

{%- macro bullet(icon, text) -%}
<li><span class="fa-li"><i class="fas fa-{{ icon }}"></i></span> {{ text }}</li>
{%- endmacro -%}

<!DOCTYPE html>
<html>
    <head>
        <title>Mondash</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <span class="navbar-brand">Mondash</span>
                <li class="navbar-text">&pound;{{ currency(balances[default.id].spend_today) }} spent today</li>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="nav-content">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href id="btn-accounts" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ account_label(default) }}</a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                                {%- for account in accounts %}
                                <button class="dropdown-item" type="button"{% if account.closed %} disabled{% endif %}>
                                    {{ account_item(account) }}
                                </button>
                                {%- endfor %}
                                {%- if pots %}
                                <div class="dropdown-divider"></div>
                                {%- for pot in pots %}
                                <button class="dropdown-item" type="button"{% if pot.deleted %} disabled{% endif %}>
                                    {{ pot_item(pot) }}
                                </button>
                                {%- endfor %}
                                {%- endif %}
                                <div class="dropdown-divider"></div>
                                <a href="/logout" class="dropdown-item"><i class="fa-fw fas fa-sign-out-alt"></i> Log out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container py-3">
            {%- set heading = namespace(month=none, date=none) %}
            {%- for item in items | reverse %}
            {%- if not heading.month == (item.created.month, item.created.year) %}
            {%- set heading.month = (item.created.month, item.created.year) %}
            <h2 class="mt-2">{{ item.created.strftime("%B %Y") }}</h2>
            {%- endif %}
            {%- if not heading.date == item.created.date() %}
            {%- set heading.date = item.created.date() %}
            <h3 class="mt-2">{{ item.created.strftime("%d/%m/%y") }}</h3>
            {%- endif %}
            {%- if item.is_load or item.amount > 0 %}
            {%- set colour = "success" %}
            {%- elif item.amount == 0 %}
            {%- set colour = "secondary" %}
            {%- elif item.decline_reason %}
            {%- set colour = "danger" %}
            {%- elif item.merchant and item.merchant.atm %}
            {%- set colour = "info" %}
            {%- else %}
            {%- set colour = "primary" %}
            {%- endif %}
            <div class="card text-white bg-{{ colour }} mt-1"{% if item.id in dupes %} style="opacity: 0.5"{% endif %}>
                <div class="card-body p-1">
                    <h4 class="card-title"></h4>
                    {%- if item.merchant and item.merchant.logo %}
                    <img src="{{ item.merchant.logo }}" class="float-right mr-3" style="border: 1px solid rgba(0, 0, 0, .125); max-height: 4.5rem">
                    {%- endif %}
                    <ul class="fa-ul">
                        {{ bullet("clock", item.created.strftime("%H:%M:%S")) }}
                        {%- set text = currency(item.amount) %}
                        {%- if item.local_currency and not item.currency == item.local_currency %}
                        {%- set text %}{{ text }} ({{ currency(item.local_amount, false) }} {{ item.local_currency }}){% endset %}
                        {%- endif %}
                        {{ bullet("pound-sign", text) }}
                        {%- if item.merchant %}
                        {{ bullet("globe" if item.merchant.online else "user-secret", item.merchant.name) }}
                        {%- if item.merchant.address and not item.merchant.online %}
                        {{ bullet("map-marker-alt", item.merchant.address.formatted) }}
                        {%- endif %}
                        {%- elif item.counterparty %}
                        {{ bullet("user", item.counterparty.name) }}
                        {%- elif item.is_load %}
                        {{ bullet("plus-square", "Top-up") }}
                        {%- endif %}
                        {%- if item.decline_reason %}
                        {{ bullet("minus-circle", "Declined") }}
                        {%- endif %}
                        {%- if item.notes %}
                        {{ bullet("pencil-alt", item.notes) }}
                        {%- endif %}
                    </ul>
                </div>
            </div>
            {%- endfor %}
        </div>
        <script src="/static/js/jquery-3.3.1.min.js"></script>
        <script src="/static/js/bootstrap.bundle.min.js"></script>
        <script src="/static/js/fontawesome-all.min.js"></script>
    </body>
</html>
